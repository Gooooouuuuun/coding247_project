   	<update id="recruitUpdateTeamMem" parameterType="kosmo.team.project.dto.RecruitTeamMemDTO">
	update
		recruit_teammemboard
	set
		title=#{title},
		sido=#{sido_id},
		sigungu=#{sigungu_id},
		pos=#{pos},
		team_mem=#{team_mem}
	where 
		b_no = #{b_no}
	</update>
	
